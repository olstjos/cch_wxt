{% extends 'block--bare.html.twig' %}
{#
/**
 * @file
 * Default theme implementation for a branding block.
 *
 * Each branding element variable (logo, name, slogan) is only available if
 * enabled in the block configuration.
 *
 * Available variables:
 * - site_logo: Logo for site as defined in Appearance or theme settings.
 * - site_name: Name for site as defined in Site information settings.
 * - site_slogan: Slogan for site as defined in Site information settings.
 *
 * @ingroup templates
 */
#}
{% block content %}
  <!-- Logo -->
  {% if logo_svg %}
    <div class="container">
      <div class="brand col-xs-9 col-sm-5 col-md-4 col-lg-12"
        property="publisher"
        typeof="GovernmentOrganization">
        <a class="logo navbar-btn"
          href="{{ path('<front>') }}"
          title="{{ 'Home'|t }}"
          rel="home">
          <img src="{{ logo_svg }}" alt="{{ 'Home'|t }}" />
        </a>
      </div>
    </div>
  {% endif %}

  <!-- Site Name -->
  {% if site_name %}
    <div class="site-name">
      <div class="container">
        <a class="name navbar-brand h2 mrgn-tp-sm mrgn-bttm-sm"
          href="{{ path('<front>') }}"
          title="{{ 'Home'|t }}"
          rel="home">
          {{ site_name }}
        </a>
      </div>
    </div>
  {% endif %}

  <!-- Site Slogan -->
  {% if site_slogan %}
    <p class="navbar-text">
      {{ site_slogan }}
    </p>
  {% endif %}

  <nav id="wb-sm"
    class="wb-menu wb-init wb-data-ajax-replace-inited wb-menu-inited wb-navcurr-inited"
    typeof="SiteNavigationElement">
    <!-- Application templates - Sample menu -->
    <!-- DataAjaxFragmentStart -->

    <div class="container-fluid search-bk">
      <div class="pnl-strt container nvbar search-bk">
        <h2 class="wb-inv">
          Main navigation menu
        </h2>
        <div class="row">
          <div class="col-md-8" id="wb-explore">
            <h3 class="wb-inv">
              Explore categories
            </h3>
            <ul class="list-inline menu small search-bk" role="menubar">
              <li class="text-center">
                <a href="010-ssocca-02-01-en.html"
                  class="item"
                  tabindex="0"
                  aria-posinset="1"
                  aria-setsize="3"
                  role="menuitem">
                  <img src="{{ base_path ~ directory }}/images/001-trans-01b1.png"
                    class="img-thumbnail mrgn-bttm-sm"
                    alt="" /><br />
                  Transportation
                </a>
              </li>
              <li class="text-center">
                <a href="/{{ language }}/sector/term/1"
                  class="item"
                  tabindex="-1"
                  aria-posinset="2"
                  aria-setsize="3"
                  role="menuitem">
                  <img src="{{ base_path ~ directory }}/images/001-financial-01t1.png"
                    class="img-thumbnail mrgn-bttm-sm"
                    alt="" /><br />
                  Financial services
                </a>
              </li>
              <li class="text-center">
                <a href="010-ssocca-04-01-en.html"
                  class="item"
                  tabindex="-1"
                  aria-posinset="3"
                  aria-setsize="3"
                  role="menuitem">
                  <img src="{{ base_path ~ directory }}/images/001-telecommunications-01t1.png"
                    class="img-thumbnail mrgn-bttm-sm"
                    alt="" /><br />
                  Telecommunications
                </a>
              </li>
            </ul>
          </div>
          <div class="col-md-4">
            <div class="mrgn-tp-xl mrgn-bttm-md" id="wb-search">
              <form>
                <label for="consumer-search" class="wb-inv">
                  Search the Consumer Hub
                </label>
                <div class="input-group">
                  <input type="text"
                    class="form-control input-md full-width"
                    id="consumer-search"
                    placeholder="Search the consumer hub"
                    tabindex="-1" />
                  <span class="input-group-btn">
                    <a href="010-ssocca-01-01-en.html"
                      class="btn btn-md btn-primary"
                      type="button"
                      tabindex="-1">
                      <span class="nowrap">
                        <span class="fas fa-search mrgn-rght-sm"></span> Search
                      </span>
                    </a>
                  </span>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
    <!-- DataAjaxFragmentEnd -->
  </nav>
{% endblock %}
